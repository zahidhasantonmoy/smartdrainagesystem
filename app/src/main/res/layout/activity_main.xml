<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlowGuard EcoControl"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Water Levels -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"u
        android:text="Water Levels"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/chamber1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Chamber 1: OK"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/chamber2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Chamber 2: OK"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/chamber3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Chamber 3: OK"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Sensor Data -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Data"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/sonar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonar 1: 0.0 cm"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/sonar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonar 2: 0.0 cm"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/gas_mq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQ2 Gas: 0.0 V"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/gas_mq8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQ8 Gas: 0.0 V"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: 0.0 Â°C"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/ir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IR: Not Detected"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/flame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flame: Not Detected"
        android:textColor="@color/white"/>

    <!-- GPS -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Coordinates"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat: 0.0, Lon: 0.0"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="Open in Google Maps"
        android:textColor="@color/white"/>

    <!-- Servo Controls -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servo Control"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>
    <Switch
        android:id="@+id/auto_servo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Cutting"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/manual_cut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:text="Manual Cut"
        android:textColor="@color/black"/>

    <!-- Alerts -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerts"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No alerts"
        android:textColor="@color/yellow"/>
</LinearLayout>